<UserControl x:Class="Playlistosu.ConfirmDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Playlistosu"
             mc:Ignorable="d" 
             d:DesignHeight="240" d:DesignWidth="360">
    <Grid Margin="26">
        <TextBlock TextWrapping="Wrap" Text="DummyText" Name="MessageTextBlock"
                   FontSize="26" FontFamily="Quicksand"/>
        <StackPanel Orientation="Horizontal"
                    VerticalAlignment="Bottom"
                    HorizontalAlignment="Right">
            <Button Click="ContinueButton_OnClick" Name="ContinueButton"
                    IsDefault="True"
                    Style="{StaticResource MaterialDesignFlatButton}">
                CONTINUE
            </Button>
            <Button Click="CancelButton_OnClick" Margin="12 0 0 0"
                Style="{StaticResource MaterialDesignFlatButton}"
                ToolTip="MaterialDesignFlatButton" Name="CancelButton">
                CANCEL
            </Button>
        </StackPanel>
    </Grid>
</UserControl>
